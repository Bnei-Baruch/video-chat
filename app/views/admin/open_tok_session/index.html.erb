<h1>Sessions administration</h1>
<p><%= link_to "New Session", new_admin_session_path %></p>
<table border="1">
  <thead>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Location</th>
        <th>Echo Suppression</th>
        <th>Multiplexer</th>
        <th>Output Streams</th>
        <th>Switch Type</th>
        <th>Switch Timeout</th>
        <th>Created at</th>
        <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%- @sessions.each_with_index { |session, index| -%>
        <%= render :partial => 'sessions-list', :locals => {:session => session, :even => index.even?} %>
    <%- } -%>
  </tbody>
</table>
<p><%= link_to "New Session", new_admin_session_path %></p>